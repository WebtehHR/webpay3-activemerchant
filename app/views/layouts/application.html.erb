<!DOCTYPE html>
<html>
<head>
  <title>WebPay3 ActiveMerchant demo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'WebPay3 ActiveMerchant demo', :new_order, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to 'New order', :new_order %></li>
          <li><%= link_to 'Orders', :orders %></li>
          <li><%= link_to 'WebPay3 documentation', 'https://ipg.webteh.hr/en/documentation/form' %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>

  <div class="container">
    <% flash.each do |name, msg| -%>
      <% name = 'danger' if name == 'alert' %>
      <% name = 'success' if name == 'notice' %>
      <%= content_tag :div, class: "alert alert-#{name} alert-dismissable", style: "margin-top: 1em;" do %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg.html_safe %>
      <% end -%>
    <% end -%>

    <%= yield %>
  </div><!-- /.container -->
</body>
</html>
