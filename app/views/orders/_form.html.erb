<%= form_for(@order, html: {class: 'form-vertical'}) do |f| %>
  <% if @order.errors.any? %>
    <div class = "alert alert-danger alert-dismissable", style: "margin-top: 1em;">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4 style="margin-top: 0;"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>
      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-xs-3">
      <%= f.label :order_number %>
      <%= f.text_field :order_number, class: 'form-control', placeholder: 'Enter order number' %>
    </div>

    <div class="form-group col-xs-3">
      <%= f.label :currency %>
      <%= f.select :currency, Order::CURRENCIES, {}, class: 'form-control' %>
    </div>

    <div class="form-group col-xs-3">
      <%= f.label :amount %>
      <%= f.text_field :amount, class: 'form-control', placeholder: 'Enter amount in cents' %>
    </div>
  </div>

  <%= f.submit class: 'btn btn-default' %>
<% end %>
